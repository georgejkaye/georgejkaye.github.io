<div class="nav-bar desktop">
    <div class="container nav-bar-content wide">
        <div class="left-nav">
            {% if page.title == "Home" %}
            <a href="#top">
                {% else %}
                <a class="site-name-box" href="/">
                    {% endif %}
                    <div class="site-name">
                        <img class="nav-site-image" src="{{ people.me.picture }}" alt="me">
                        <div class="nav-bar-title pink-text">George Kaye</div>
                    </div>
                </a>
        </div>
        <div class="desktop right-nav">
            {% for link in nav.all-links %}
            <div class="nav-link"><a href={{ link.target }}>{{ link.title }}</a></div>
            {% endfor %}
            {% if title == "Home" %}
            <div class="nav-link home-link">•</div>
            {% for link in nav.home-links %}
            <div class="nav-link home-link"><a href={{ link.target }}>{{ link.title }}</a></div>
            {% endfor %}
            {% endif %}
            {% if type contains "trains" %}
            <div class="nav-link home-link">•</div>
            {% for link in nav.trains-links %}
            <div class="nav-link"><a href={{ link.target }}>{{ link.title }}</a></div>
            {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
<div class="nav-bar-mobile">
    {% for link in nav.all-links %}
    <div class="nav-link"><a href={{ link.target }}>{{ link.title }}</a></div>
    {% endfor %}
</div>