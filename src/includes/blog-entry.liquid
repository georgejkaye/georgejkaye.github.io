<div class="post">
    <div class="post-header">
        <a href={{ post.url }}>
            <h2 class="post-title">
            {% if post.data.series %}
                {{ post.data.series }}
            {% else %}
                {{ post.data.title }}
            {% endif %}
            </h2>
            <span class="post-subtitle">
        {% if post.data.part %}
                {{ post.data.part }}
            {% elsif post.data.subtitle %}
                {{ post.data.subtitle }}
            {% endif %}     
            </span>
        </a>
        <div class="post-info">
            {% if post.data.date %}<span class="post-date">{{ post.data.date | prettyDate }}</span>{% endif %}
            {% for tag in post.data.tags %}
            {% if tag != "blog" %}
            {% include components/tag %}
            {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class="post-content">
        {% if post.data.image %}
        <a href={{ post.url }} title="Read blog post '{{ post.title }}'"><img class="post-img" src={{ post.data.image }} alt={{ post.data.alt }}/></a>
        {% endif %}
        <div class="post-preview">
            <div>
            {{ post.data.tagline }}
            </div>
            <div class="post-readmore">
                <a href={{ post.url }} title="Read blog post '{{ post.title }}'">Read more</a>
            </div>
        </div> 
  </div>
</div>